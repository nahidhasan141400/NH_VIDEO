{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "NH Video",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "startDragging": true,
        "maximize": true,
        "minimize": true,
        "close": true,
        "unmaximize": true,
        "unminimize": true,
        "show": true,
        "hide": true,
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.nahid.nh",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "decorations": false,
        "fullscreen": false,
        "resizable": false,
        "title": "NH Video",
        "width": 400,
        "height": 234,
        "theme": "Dark",
        "titleBarStyle": "Overlay",
        "transparent": true,
        "hiddenTitle": true,
        "alwaysOnTop": true
      }
    ]
  }
}
